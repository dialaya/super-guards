<div class="container">
  <div class="h-100 p-4">
    <div class="w-md-75 mx-auto p-md-2">
      <h2 class="text-center">Identifiez-vous</h2>

      <FormBuilder @for={{this}} @action={{this.submit}} as |f|>
        <f.input @attr="login" @name="login" @as="string" @placeholder="Identifiant / Email" @label=" " />
        <f.input @attr="password" @name="password" @as="password" @placeholder="Mot de passe" @label=" " />
        <div class="form-group">
          <div class="d-md-flex">
            <div class="col-md-6">
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="permanent" id="remember-check">
                <label class="form-check-label" for="remember-check">
                  Se souvenir de moi
                </label>
              </div>
            </div>
            <div class="col-md-6 text-md-right">
              <LinkTo @route="recovery" class="ml-auto">Probl&egrave;mes de connexion ?</LinkTo>
            </div>
          </div>
        </div>

        <div class="d-flex justify-content-center">
          <div class="m-md-2 m-sm-1">
            <f.submit @text="Connexion" class="btn btn-info" />
          </div>
        </div>
      </FormBuilder>
    </div>
  </div>
</div>